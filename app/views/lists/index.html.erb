<!DOCTYPE html>
<html>

<div class="container mt-5">
  <h1 class="text-center">My lists</h1>
</div>

<div class="container align-center mt-5">
  <div class="card-group">
  <ul class="card-group">
  <% @lists.each do |list| %>
      <li><div class="card mt-5 p-2 bd-highlight" style="height: 18rem; width: 18rem;">
        <%= link_to list.name.capitalize, list_path(list) %>
      </div></li>
    <% end %>
  </ul>
  </div>
</div>

<div class="container align-center mt-5">
  <%= link_to "Add a new list", new_list_path %>
</div>
</body>
